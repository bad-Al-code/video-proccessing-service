NODE_ENV=development

DB_HOST=mysql
DB_PORT=3306
DB_NAME=video_service_db
DB_USER=video_user
DB_PASSWORD=video_password
DB_ROOT_PASSWORD=supersecret_dev_root_password 
DATABASE_URL="mysql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}"

AWS_S3_BUCKET_NAME=your-s3-bucket-name-here
AWS_REGION=your-aws-region-here
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

RABBITMQ_USER=app_user
RABBITMQ_PASSWORD=app_password
RABBITMQ_HOST=rabbitmq
RABBITMQ_NODE_PORT=5672
RABBITMQ_VHOST=/

# Comma-separated list of resolutions to generate (e.g., 1080p,720p,480p,360p)
PROCESSING_RESOLUTIONS=720p,480p

# Comma-separated list of timestamps for thumbnails (e.g., 10%,50%,90% or 00:00:05,00:00:15)
THUMBNAIL_TIMESTAMPS=10%

# Size for generated thumbnails (WxH or Wx?)
THUMBNAIL_SIZE=640x?

# Max number of concurrent FFmpeg processes (adjust based on container resources)
FFMPEG_CONCURRENCY=2

# Optional: S3 key of the watermark image (e.g., assets/watermark.png). Leave blank to disable.
WATERMARK_S3_KEY=

# Position for the watermark (top_left, top_right, bottom_left, bottom_right, center)
WATERMARK_POSITION=bottom_right

# Resolution (from PROCESSING_RESOLUTIONS) to use for HLS generation
HLS_RESOLUTION=480p
